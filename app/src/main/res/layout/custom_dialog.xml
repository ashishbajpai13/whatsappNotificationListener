<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/scale_10dp"
    android:paddingBottom="@dimen/scale_5dp">

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/scale_10dp"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/scale_20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_1dp"
        android:layout_below="@id/app_name_tv"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/top_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_20dp"
        android:layout_marginStart="@dimen/scale_20dp"
        android:layout_marginEnd="@dimen/scale_20dp"
        android:layout_below="@+id/app_name_tv"
        android:gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/scale_18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/blank_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_1dp"
        android:visibility="visible"
        android:layout_below="@+id/top_tv"
        android:layout_marginTop="@dimen/scale_20dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank_line"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/scale_5dp"
        android:layout_marginBottom="@dimen/scale_10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/yes_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/positive"
            android:gravity="center"
            android:textSize="@dimen/scale_18sp"
            android:padding="@dimen/scale_10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/scale_10dp"
            android:text="@string/cancel"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/scale_18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>